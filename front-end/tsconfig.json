{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "es2018",
    "jsx": "react",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "/node_modules/@types",
      "/src/dts"
    ],
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es7",
      "es2017.intl",
      "es2017.typedarrays",
       "es2016.array.include",
      "es2017.object",
      "es2016.array.include",
      "es2017", 
      "es2018",
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "files": [
    "./src/dts/globals.d.ts" 
  ],
  "include": [
    "./src/dts/globals.d.ts"
   
  ]
}